.type Cost <: number
.type Node <: symbol
.type NodeList  <: symbol

.decl Link(x: Node, y: Node, c: Cost)
.input Link

.decl Path(x: Node, y: Node, path: NodeList, c: Cost)
Path(x,y,p,c) :- Link(x,y,c), p=cat(x,y).
Path(x,y,p,c) :- Link(x,z,c1), Path(z,y,p1,c2) , p=cat(x,p1), 
  !contains(as(x, symbol), as(p1, symbol)),
  c = c1+c2.

.output Path
